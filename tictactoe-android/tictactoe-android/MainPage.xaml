<?xml version="1.0" encoding="utf-8" ?>
<ContentPage.Padding xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tictactoe_android.MainPage">
   <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" WinPhone="20,20,20,20" />
    <StackLayout x:Name="Menu_Page" Spacing="200">
     <StackLayout BackgroundColor="#2196F3">
            <Label Text="Tic Tac Toe" HorizontalTextAlignment="Right" TextColor="White" FontSize="18"/>
        </StackLayout>
        <StackLayout BackgroundColor="#2196F3">
            <Label Text="Tic Tac Toe" HorizontalTextAlignment="Right" TextColor="White" FontSize="18"/>
        </StackLayout>
        
        <StackLayout BackgroundColor="Transparent">
            <Button x:Name="single_player"
                Text="Single Player"
                HorizontalOptions="Center"
                Padding="90, 40"
                FontSize="20"
                WidthRequest="340"
                Clicked="single_player_clicked"
            />
            
            <Button x:Name="multi_player"
                Text="Multi Player"
                HorizontalOptions="Center"
                Padding="90, 40"
                FontSize="20"
                WidthRequest="340"
                Clicked="multi_player_clicked"
            />
        </StackLayout>

    </StackLayout>

</ContentPage.Padding>
